{
  "name": "exchange-protocol",
  "description": "Exchange contracts from Uniswap v2, and new features (zaps)",
  "version": "2.0.0",
  "license": "GPL-3.0/MIT",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:testnet": "npx hardhat run --network testnet scripts/deploy.ts",
